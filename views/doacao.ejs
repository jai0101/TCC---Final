	<div class="contact1">
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="assets/img/doacao.png" alt="IMG">
			</div>

			<form action = "/enviadoacao" method="POST" class="contact1-form validate-form">
				<span class="contact1-form-title">
					Cadastre-se para receber uma doação:
				</span>

				<div class="wrap-input1 validate-input" data-validate = "Name is required">
					<input class="input1" type="text" name="nome" placeholder="Name">
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Subject is required">
					<input class="input1" type="text" name="pix" placeholder="Pix">
					<span class="shadow-input1"></span>
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Message is required">
					<textarea class="input1" name="mensagem" placeholder="Description"></textarea>
					<span class="shadow-input1"></span>
				</div>

				<div class="container-contact1-form-btn">
					<button class="contact1-form-btn" class="submit" value="Enviar">
						<span>
							Enviar
						</span>
					</button>
				</div>

        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        <p class="small fw-bold mt-2 pt-1 mb-0"
        >Deseja realizar uma doação? <a href="/mensagem"
                      
          class="link-danger" >Mensagens</a> </p>
			</form>
		</div>
	</div>




