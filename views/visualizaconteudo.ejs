<%- include('./cabecalho') -%>

<section id="portfolio" class="portfolio">
  <div class="container" data-aos="fade-up">

    <section style="background-color: #fffcf7;">
      <div class="section-header">
        <h2>Portfolio</h2>
        <p><%=nome%></p>
      </div>
      <div class="row d-flex justify-content-center" style="background-color: #fffcf7;">
        <div class="col-md-12 col-lg-10">
          <table style="color:#fffcf7">
            <tr>
              <th>
                <div class="card text-dark" style="height: 80px; width: 900px;">
                  <div class="card-body p-4">
                    <h4 class="mb-0" style="color: #b56e56;  text-align: center;">Material didático disponibilizado pelos usuários</h4>
              </th>
            </tr>
            <%Disciplinas.forEach(function(disciplina){%>
            <tr>
              <td>
                <br>
                <%if(disciplina.material.endsWith('.jpg')||disciplina.material.endsWith('.png')||
                        disciplina.material.endsWith('.JPG')||disciplina.material.endsWith('.PNG')||
                        disciplina.material.endsWith('.jfif')||
                        disciplina.material.endsWith('.webp')){%>
                    <p class="mb-0">
                      <div class="section-header">
                      <div class="col-lg-4 col-md-6 portfolio-item filter-app" style="height:300px; width:300px;">
                        <div class="portfolio-wrap">
                          <img src="/assets/fotos/<%=disciplina.material%>"
                          style="height:300px; width:300px; object-fit:cover;"
                           class="img-fluid" alt="">
                          <div class="portfolio-info">
                            <h4><%=disciplina.titulo%></h4>
                            <div class="portfolio-links">
                              <a href="/assets/fotos/<%=disciplina.material%>" 
                                class="portfokio-lightbox"><i
                                  class="bi bi-plus"></i></a>
                            </div>
                          </div>
                        </div>
                      </div>
                      </div>
                    </p>
                      <%}else{%>
                        <p class="mb-0">
                          <div class="section-header">
                          <div class="col-lg-4 col-md-6 portfolio-item filter-app" 
                          style="height:300px; width:300px;">
                            <div class="portfolio-wrap">
                              <img src="/assets/img/logo.png" 
                              style="height:300px; width:300px; object-fit:cover;"
                              class="img-fluid" alt="">
                              <div class="portfolio-info" >
                                <h4><%=disciplina.titulo%></h4>
                                <div class="portfolio-links">
                                  <a href="/assets/fotos/<%=disciplina.material%>" 
                                     class="portfokio-lightbox"><i
                                      class="bi bi-plus"></i></a>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                        </p>
                          <%}%>
                          <a href="/assets/fotos/<%=disciplina.material%>" class="section-header" alt="image 1" class="w-100 rounded-3">
                            <h2 class="text-start">Baixar Material</h2>
                          </a>
                         
                  </div>
                </div>
              </td>
            </tr>
            <%})%>
          </table>
        </div>
      </div>
    </section>
  </div>
</section>

<%- include('./rodape') -%>
